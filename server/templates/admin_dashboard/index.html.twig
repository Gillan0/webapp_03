{% extends 'base.html.twig' %}

{% block title %}WishlistAdmin{% endblock %}

{% block style %} 

<link rel="stylesheet" href="{{ asset('css/admin_dashboard.css') }}"> 
<link rel="stylesheet" href="{{ asset('css/bandeau.css') }}?v={{ random() }}">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    
{% endblock %}

{% block body %}
    <div class="wishlist-container">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="wishlist-card">
                    <h5 class="mb-3">Top 3 Most Expensive Items</h5>

                    {% for item in items %}
                    <div class="wishlist-item bg-light d-flex align-items-center border py-2">
                        <div class="ms-3 flex-grow-1">
                            <p class="mb-0">{{item.lib_item}}</p>
                            <small>{{item.author}}'s wishlist</small>
                        </div>
                        <strong>${{item.price}}</strong>
                    </div>
                    {% endfor %}

                </div>
            </div>
            <div class="col-md-6">
                <div class="wishlist-card">
                    <h5 class="mb-3">Top 3 Wishlists by Total Value</h5>

                    {% for wishlist in wishlists %} 
                    <div class="wishlist-item bg-light d-flex align-items-center border p-2">
                        <div class="ms-3 flex-grow-1">
                            <p class="mb-0">{{wishlist.author}}'s wishlist</p>
                            <small>{{wishlist.nb_purchased_item}} items purchased</small>
                        </div>
                        <strong>${{wishlist.total_price}}</strong>
                    </div>
                    {% endfor %}

            
                </div>
            </div>
        </div>
    </div>

{% endblock %}
