{% extends 'base.html.twig' %}

{% block title %}Sign up page{% endblock %}

{% block style %} 

<link rel="stylesheet" href="{{ asset('css/form.css') }}"> 
<link rel="stylesheet" href="{{ asset('css/bandeau.css') }}?v={{ random() }}">
<link rel="stylesheet" href="{{ asset('css/login.css') }}?v={{ random() }}">
    
{% endblock %}

{% block body %}

    {# Bandeau avec deux boutons #}
   <nav>
        <div class="buttons">
            <a href="{{ path('app_user_login') }}" class="btn btn-secondary">Login</a>
            <a href="{{ path('app_user_sign_up') }}" class="btn btn-primary">Sign Up</a>
        </div>
    </nav>


    <h1>Sign Up</h1>

{{ form_start(form, {'attr': {'class': 'form-container'}}) }}
    <div class="form-group">
        {{ form_label(form.username) }}<br>
        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}<br>
        {{ form_errors(form.username) }}
    </div>

    
    <div class="form-group">
        {{ form_label(form.email) }}<br>
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}<br>
        {{ form_errors(form.email) }}
    </div>
    
    <div class="form-group">
        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}<br>
        {{ form_errors(form.password) }}
    </div>
    
    {% if erreur is defined %}
        <p style = "color:red">
            {{ erreur }}
        </p>
    {% endif %}

    <button class="btn btn-primary ">Register</button>
{{ form_end(form) }}


<div>

{% endblock %}

